<%- include('../partials/header.ejs') %>

<%- include('../partials/menu.ejs') %>

<div class="col">
  <h2>Welcome <%= name %></h2>
  <% if(note) { %>
    <p>Here's your last note added</p>
    <%- include('./note', { note: note }) %> 

    <div class="d-flex flex-column align-items-center mt-5">
      <p>or add another one</p>
      <a href="/dashboard/notes/add-note" class="w-auto"><h2><i class="bi bi-file-plus"></i></h2</a>
    </div>
  <% } else { %>
    <div class="d-flex flex-column align-items-center mt-5">
      <p>Start creating a note!</p>
      <a href="/dashboard/notes/add-note"><h2><i class="bi bi-file-plus"></i></h2</a>
    </div>
  <% } %>
</div>

